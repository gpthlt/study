<%- include('../layout/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Vocabulary Lists</h1>
    <a href="/vocab/create" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Create New List
    </a>
  </div>

  <% if (vocabLists.length === 0) { %>
  <div class="alert alert-info">
    <p>No vocabulary lists available yet.</p>
    <a href="/vocab/create" class="btn btn-primary">Create Your First List</a>
  </div>
  <% } else { %>
  <div class="row">
    <% vocabLists.forEach(list => { %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= list.title %></h5>
          <p class="card-text text-muted">
            <%= list.description || 'No description' %>
          </p>
          <span class="badge bg-primary"><%= list.level %></span>
          <span class="badge bg-secondary"><%= list.words.length %> words</span>
        </div>
        <div class="card-footer bg-transparent">
          <div
            class="d-flex justify-content-between align-items-center flex-wrap gap-1"
          >
            <div>
              <a href="/vocab/<%= list._id %>" class="btn btn-primary btn-sm">
                <i class="bi bi-eye"></i> View
              </a>
              <a
                href="/vocab/<%= list._id %>/listening"
                class="btn btn-success btn-sm"
              >
                <i class="bi bi-headphones"></i> Practice
              </a>
            </div>
            <div>
              <a
                href="/vocab/<%= list._id %>/edit"
                class="btn btn-outline-secondary btn-sm"
              >
                <i class="bi bi-pencil"></i> Edit
              </a>
              <form
                action="/vocab/<%= list._id %>/delete"
                method="POST"
                class="d-inline"
                onsubmit="return confirm('Delete this vocabulary list and all its words?')"
              >
                <button type="submit" class="btn btn-outline-danger btn-sm">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</div>

<%- include('../layout/footer') %>
