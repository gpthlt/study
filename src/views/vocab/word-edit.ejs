<%- include('../layout/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Edit Word: <%= word.word %></h1>
    <a href="/vocab/<%= vocabList._id %>" class="btn btn-secondary"
      >Back to List</a
    >
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <form
            action="/vocab/<%= vocabList._id %>/word/<%= word._id %>/edit"
            method="POST"
          >
            <div class="mb-3">
              <label for="word" class="form-label"
                >Word <span class="text-danger">*</span></label
              >
              <input
                type="text"
                class="form-control"
                id="word"
                name="word"
                value="<%= word.word %>"
                required
              />
            </div>

            <div class="mb-3">
              <label for="phonetic" class="form-label">Phonetic</label>
              <input
                type="text"
                class="form-control"
                id="phonetic"
                name="phonetic"
                value="<%= word.phonetic || '' %>"
              />
              <small class="form-text text-muted"
                >IPA pronunciation (optional)</small
              >
            </div>

            <div class="mb-3">
              <label for="meaning" class="form-label"
                >Meaning <span class="text-danger">*</span></label
              >
              <textarea
                class="form-control"
                id="meaning"
                name="meaning"
                rows="2"
                required
              >
<%= word.meaning %></textarea
              >
            </div>

            <div class="mb-3">
              <label for="audio" class="form-label">Audio Path</label>
              <input
                type="text"
                class="form-control"
                id="audio"
                name="audio"
                value="<%= word.audio || '' %>"
              />
              <small class="form-text text-muted"
                >Path to audio file (optional)</small
              >
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save Changes
              </button>
              <a
                href="/vocab/<%= vocabList._id %>"
                class="btn btn-outline-secondary"
                >Cancel</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layout/footer') %>
